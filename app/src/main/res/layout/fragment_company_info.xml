<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/scroll_parent"
    android:overScrollMode="never"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/company_info"
            android:layout_marginTop="@dimen/dp_20"
            android:text=""
            android:textSize="@dimen/dp_14"
            android:textColor="@color/alphaTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:gravity="center"
                android:text="公司地址"
                android:textSize="20dp"
                android:textColor="@color/darkTextColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/darkGray"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <LinearLayout
            android:id="@+id/company_location_parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <LinearLayout
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/location_icon"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:id="@+id/company_city"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/company_location"
                        android:textSize="@dimen/dp_12"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/icon_default_right_arrow"
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:gravity="center"
                android:text="工商信息"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/darkTextColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/darkGray"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160">
            <View
                android:background="@color/darkGray"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/darkGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@color/fourthWhite"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text="公司全称"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/company_full_name"
                            android:layout_weight="0.28"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text="成立时间"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/company_registered_time"
                            android:layout_weight="0.28"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@color/fourthWhite"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text="注册机构"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/company_authority_address"
                            android:layout_weight="0.28"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text="法人代表"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/company_legal_person"
                            android:layout_weight="0.28"
                            android:textColor="@color/alphaTextColor"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/darkGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </LinearLayout>
            <View
                android:background="@color/darkGray"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/icon_tianyancha"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>