<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite">
    <FrameLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_back_normal"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/colorGreen"
            android:text="保存"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:textSize="18dp"
            android:textColor="@color/textColor"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑个人信息" />

    </FrameLayout>
    <View
        android:background="@color/darkGray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="115dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImage"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/default_user"
                    android:layout_width="69dp"
                    android:layout_height="69dp" />
                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="修改头像"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="36dp"/>
            <FrameLayout
                android:id="@+id/userName"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="阿朵"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="名字"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <FrameLayout
                android:id="@+id/userBirthday"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="2003.01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="生日"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <FrameLayout
                android:id="@+id/userSex"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="男"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="性别"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/darkGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <FrameLayout
                android:id="@+id/userTelNumber"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="13029425921"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="手机号码"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <FrameLayout
                android:id="@+id/userMail"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="1111@163.com"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="联系邮箱"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>
            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/darkGray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <FrameLayout
                android:id="@+id/userLocationCity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="牡丹江"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="所在城市"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <FrameLayout
                android:id="@+id/userIdentity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:textColor="@color/darkTextColor"
                    android:textSize="18dp"
                    android:text="学生"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="12dp"
                    android:text="当前身份"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="17dp"
                    android:src="@drawable/icon_default_right_arrow"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>