<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/parent_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:maxLength="18"
                    android:id="@+id/position_name"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/textColor"
                    android:gravity="center_vertical"
                    android:text="销售总监"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/city"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="南京"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_gravity="center"
                            android:background="@color/thirdWhite"
                            android:layout_width="1.2dp"
                            android:layout_height="12dp"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/location"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="梨园"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_gravity="center"
                            android:background="@color/thirdWhite"
                            android:layout_width="1.2dp"
                            android:layout_height="12dp"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/experience"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="5-10年"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_gravity="center"
                            android:background="@color/thirdWhite"
                            android:layout_width="1.2dp"
                            android:layout_height="12dp"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/degree"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="本科"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/label1"
                        android:textSize="11dp"
                        android:background ="@drawable/recommend_position_label_shape"
                        android:gravity="center_vertical"
                        android:text="股票期权"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/label2"
                        android:textSize="11dp"
                        android:background ="@drawable/recommend_position_label_shape"
                        android:gravity="center_vertical"
                        android:text="项目奖金"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/label3"
                        android:textSize="11dp"
                        android:background ="@drawable/recommend_position_label_shape"
                        android:gravity="center_vertical"
                        android:text="寒暑假儿童班"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/label4"
                        android:textSize="11dp"
                        android:background ="@drawable/recommend_position_label_shape"
                        android:gravity="center_vertical"
                        android:text="创造者家园"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/salary"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/pinkRed"
                    android:textSize="14dp"
                    android:text = "6k-10k"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/date"
                    android:textColor="@color/darkGray"
                    android:textSize="12dp"
                    android:gravity="right"
                    android:text="01月31日"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/company_image"
                    android:src="@drawable/default_user"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/company_name"
                        android:textSize="15dp"
                        android:text="腾讯娱乐"
                        android:textColor="@color/alphaTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/finance"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="南京"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_gravity="center"
                            android:background="@color/thirdWhite"
                            android:layout_width="1.2dp"
                            android:layout_height="12dp"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/size"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="梨园"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_gravity="center"
                            android:background="@color/thirdWhite"
                            android:layout_width="1.2dp"
                            android:layout_height="12dp"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:textColor="@color/grayWhite"
                        android:id="@+id/industry"
                        android:textSize="12dp"
                        android:gravity="center_vertical"
                        android:text="5-10年"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/secondGray"
            android:layout_weight="0.08"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
